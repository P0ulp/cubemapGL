uniform mat4 transform;uniform mat4 projection;uniform mat3 normalMatrix;uniform mat4 modelview;uniform mat4 modelviewInv;attribute vec4 position;attribute vec3 normal; varying vec3 reflectDir;void main() {  vec3 norm = normal * normalMatrix;  vec4 pos = position * modelview;  reflectDir = reflect(pos.xyz, norm);  vec4 ref =   modelviewInv * vec4(reflectDir,1.0);  reflectDir = ref.xyz;  gl_Position =   projection * modelview * position;  //gl_Position = modelviewInv * modelview * transform * position;}