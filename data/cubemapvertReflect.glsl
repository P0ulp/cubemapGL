uniform mat4 transform;uniform mat4 modelview;uniform mat3 normalMatrix;uniform mat4 matCam;attribute vec4 position;attribute vec3 normal;varying vec3 reflectDir;void main() {  vec3 eyeNormal =  normalMatrix * normal;   vec4 vertexPos = modelview * position;   reflectDir = reflect(normalize(vertexPos.xyz), normalize(eyeNormal));  vec4 ref = matCam * vec4(reflectDir,0);  reflectDir = ref.xyz;  gl_Position = transform * position;}