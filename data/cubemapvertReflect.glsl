uniform mat4 transform;uniform mat3 normalMatrix;uniform mat4 modelview;uniform mat4 modelviewInv;uniform mat4 matCam;attribute vec4 position;attribute vec3 normal; varying vec3 reflectDir;void main() {  vec4 pos = modelview * position;  vec3 norm = normalMatrix * normal;  reflectDir = reflect(pos.xyz, norm);  vec4 ref =   modelview * vec4(reflectDir,1.0);  reflectDir = ref.xyz;  gl_Position =  transform * position;}